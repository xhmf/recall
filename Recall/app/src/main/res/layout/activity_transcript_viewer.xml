<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transcript_viewer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs371m.recall.TranscriptViewer">


    <LinearLayout
        android:id="@+id/transcript_page_navigator"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/previous_transcript_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exo_controls_previous"/>
        <ImageButton
            android:id="@+id/next_transcript_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exo_controls_next"/>
        <EditText
            android:inputType="number"
            android:id="@+id/input_transcript_page_number"
            android:layout_width="48dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"/>
        <TextView
            android:id="@+id/transcript_page_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/transcript_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/transcript_page_navigator"
        android:text="Sample text."/>

</RelativeLayout>
